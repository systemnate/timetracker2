<div class="contact" id="client_contact_<%= @client_contact.id %>">
  <div class="contact-image">
    <%= gravatar_email(@client_contact) %>
  </div>
  <div class="contact-info">
    <strong class="contact-name"><%= @client_contact.name %></strong>&nbsp;&nbsp;<%= link_to edit_client_client_contact_path(@client, @client_contact) do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      <%= link_to client_client_contact_path(@client, @client_contact), method: :delete, data: { confirm: "Are you sure?" } do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></span><br/>
      <% end %>
    <%= @client_contact.phone_number + " | " + @client_contact.email %><br/>
    <%= @client_contact.address %><br/>
    <%= @client_contact.other %><br/>
  </div>
</div>