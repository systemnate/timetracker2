<%= form_for [@client, @client_contact], remote: true, html: { class: "form-inline" } do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name (required)" %>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
  </div>

  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
  </div>

  <div class="form-group">
    <%= f.text_area :other, class: "form-control", placeholder: "Other information" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>
