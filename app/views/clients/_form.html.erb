<%= form_for @client do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :contact %><br/>
    <%= f.text_area :contact %><br/>
  </p>
  <p>
    <%= f.label :connect_info %><br/>
    <%= f.text_area :connect_info %>
  </p>
  <p>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </p>
<% end %>
<%= link_to "All Clients", clients_path, class: "btn btn-info" %>