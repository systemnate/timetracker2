<% if @client.errors.any? %>
  <section id="errors">
    <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
    <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_for @client do |f| %>

  <div class="form-group">
    <%= f.label :name %><br/>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :contact %><br/>
    <%= f.text_area :contact, rows: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :connect_info %><br/>
    <%= f.text_area :connect_info, rows: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to "All Clients", clients_path, class: "btn btn-info" %>
<%= link_to "Configuration", pages_index_path, class: "btn btn-info" %>