<% if @tasks.count == 0 %>
  <h2>No tasks!</h2>
  <h3>To get started, click on Configuration to perform some basic setup!</h3>
  <hr/>
  <h1>All Tasks</h1>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>

<% else %>
  <div id="tag_cloud">
    <h2>Tags</h2>
    <% tag_cloud Task.tag_counts, ['label label-primary btn-xs','label label-success label-sm','label label-danger'] do |tag, css_class| %>
      <%= link_to tag_path(tag.name), class: css_class do %>
        <%= content_tag(:span, tag.name + " ").concat(content_tag(:span, tag.count, class: "badge")) %>
      <% end %>
    <% end %>
    <hr/>
  </div>

  <div class="filters">
    <h2>Filters</h2>
    <% Status.all.each do |status| %>
      <%= link_to "/tasks/filters/#{status.name}".downcase do %>
        <%= filter_status(status) %>
      <% end %>
    <% end %>
  </div>
  <h1>All Tasks</h1>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
  <hr/>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <th>ID</th>
      <th>Alt. ID</th>
      <th>Title</th>
      <th>Status</th>
      <th>Client</th>
      <th>Product</th>
      <th>Priority</th>
      <th>Summary</th>
      <th>Date Created</th>
      <th>Time</th>
    </thead>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= label_id(task) %></td>
        <td><%= label_alternate_id(task) %></td>
        <td><%= task.title %></td>
        <td><%= label_status(task) %></td>
        <td><%= show_client(task) %></td>
        <td><%= label_product(task)  %></td>
        <td><%= label_priority(task) %></td>
        <td><%= truncate(sanitize(task.summary), length: 70, separator: " ") %></td>
        <td><%= task.created_at.getlocal %></td>
        <td><%= show_time(task) %></td>
        <td><%= link_to task, class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-book" aria-hidden="true" title="Show Details"></span>
          <% end %>
        </td>
        <td><%= link_to edit_task_path(task), class: "btn btn-info" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit Details"></span>
          <% end %>
        </td>
        <td><%= link_to task, method: :delete, data: { confirm: "Are you sure?" },
          class: "btn btn-danger" do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></span>
          <% end %></td>
      </tr>
    <% end %>
  </table>
  <% end %>
</div>